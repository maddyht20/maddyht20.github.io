{  
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


  "data": {"url": "https://raw.githubusercontent.com/maddyht20/maddyht20.github.io/main/Deficit%20govt.csv"},


  "hconcat": [

    {
      "mark": {
        "type": "line",
        "point": "transparent"
      },

      "encoding": {
        "color": {
          "field": "Country",
          "legend": {
            "orient": "right",
            "title": null,
            "symbolSize": 25
          },
          "type": "nominal",
            "scale": {
              "domain": ["Indonesia", "Australia", "New Zealand", "Ireland", "United Kingdom", "Czech Republic", "Denmark", "Netherlands", "Austria", "Canada", "Belgium", "France", "Finland", "Germany", "Greece", "Hungary", "Iceland", "Italy","Japan", "Korea", "Luxembourg", "Mexico", "Netherlands", "Norway", "Poland", "Portugal", "Slovak Republic", "Spain", "Sweden", "Switzerland", "TÃ¼rkiye", "United Kingdom", "United States", "Chile", "Estonia", "Israel", "Russia", "Slovenia", "South Africa", "Euro Area", "European Union", "New Zealand", "Brazil", "Latvia", "Colombia", "Costa Rica", "Lithuania", "Indonesia"]
            }
        },

        "x": {
          "field": "Year",
          "type": "temporal",
          "title": null,
          "axis": {"grid": false}
        },

        "y": {
          "field": "General_government_deficit",
          "type": "quantitative",
          "scale": {"domain": [-35, 20]},
          "sort": "descending",
          "title": "Government Deficit (% of GDP)"
        },
        "tooltip": [
          {"field": "Country"},
          {"field": "General_government_deficit", "title": "Government Deficit (% of GDP)"}
        ]
      },
      "params": [{
        "name": "hover",
        "select": {
          "type": "point",
          "fields": ["General_government_deficit"],
          "nearest": true,
          "on": "mouseover",
          "clear": "mouseout"
        }
      }],

    "title": {
      "text": "General Government Deficit (% of GDP), 2000-2021",
      "fontSize":13,
      "subtitle": [
        "Source: OECD"
        ],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 11,
      "color": "black"
    },
      
      "selection": {
        "countrysel": {"type": "single", "empty": "all", "fields": ["Country"]}
      },
      "transform": [
        {"filter": {"selection": "countrysel"}}
      ],
      "width": 800, 
      "height": 500,

    },
  ]
}
