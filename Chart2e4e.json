{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/e4e/ch2_Growth/data/line_world_GDP_CSV.csv",
    "format": {"type": "csv"}
  },
  "title": {
    "text": "GDP",
    "subtitle": ["US Dollars (Trillions)",  "Data: OWID",""],
    "fontSize": 16,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black"
  },
  "height": 300,
  "width": 400,
  "mark": {"type": "line", "width": 10},
   "transform": [
    {"calculate": "year(datum.Year)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "selection": {
    "Country": {
      "type": "single",
      "fields": ["Country"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "CHN",
                    "KOR",
                    "SGP",
                    "BWA",
                    "THA",
                    "MYS",
                    "IDN",
                    "IND",
                    "MIC",
                    "DOM",
                    "JPN",
